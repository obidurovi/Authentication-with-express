<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"/>
    <link rel="stylesheet" href="./style.css">
</head>
<body>
    

   
    <%- body %> 

    <script>

// Upload photo
        if (document.getElementById('profile_photo')) {
            document.getElementById('profile_photo').onchange = (e) => {
            const url = URL.createObjectURL(e.target.files[0]);
            document.querySelector('.profile-preview').setAttribute('src', url);
            }
        }


// Upload gallery photo
        if (document.getElementById('gallery_photo')) {
            document.getElementById('gallery_photo').onchange = (e) => {

            const files = e.target.files;
            
            let images = '';
            for( let i = 0; i < files.length ; i++   ){
                const url = URL.createObjectURL(files[i]);
                images += `<img class="gallery-preview"                    
                src="${ url }" alt="" />`

            }
            
            document.querySelector('.gallery').innerHTML = images;
        }
    }
        

    </script>


</body>
</html>